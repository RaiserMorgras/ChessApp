<?xml version="1.0" encoding="utf-8" ?>
<Configuration>
    <Appenders>
        <File name="info" fileName="LOG.info">
            <ThresholdFilter level="warn" onMatch="DENY" onMismatch="ACCEPT"/>
            <PatternLayout pattern="%m%n"/>
        </File>
        <File name="error" fileName="LOG.error">
            <ThresholdFilter level="warn" />
            <PatternLayout pattern="%m%n"/>
        </File>
        <File name="beans-info" fileName="LOG.beans" append="false">
            <PatternLayout pattern="%level bean: %m%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Logger name="infoOutput" level="info">
            <AppenderRef ref="info"/>
        </Logger>
        <Logger name="chess.misc.BeanLoggingBeans" level = "info">
            <AppenderRef ref="beans-info"/>
        </Logger>
        <Root level="warn">
            <AppenderRef ref="error"/>
        </Root>
    </Loggers>
</Configuration>